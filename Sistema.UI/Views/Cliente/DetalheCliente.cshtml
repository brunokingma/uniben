<!-- Como a navegação recarrega a pagina esse script tem que ser usada em cada view -->
@section Scripts {
    <script type="text/javascript">
        $('.nav-pills li:eq(0) a').tab('show');
        $('[data-toggle="tooltip"]').tooltip();


        $('#produto_alteracao').multiselect({
            buttonText: function (options, select) {
                return 'selecione uma opção de produto';
            },
            buttonTitle: function (options, select) {
                var labels = [];
                options.each(function () {
                    labels.push($(this).text());
                });

                $("#grupo_alteracao").val(" ");

                $.each(labels, function (index, value) {
                    if (index == 0) {
                        $("#grupo_alteracao").val($("#grupo_alteracao").val() + value);
                    } else {
                        $("#grupo_alteracao").val($("#grupo_alteracao").val() + " - " + value);
                    }

                });

                return labels.join(' - ');
            }
        });
    </script>
}


